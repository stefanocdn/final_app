<% provide(:title, @user.to_s) %>
<div class="container">
<div class="row">
  <aside class="col-md-4">
	<section>
	<h1>
	<%= image_tag(@user.avatar_url.to_s, alt: @user.to_s, class: "avatar") %>
	<%= @user.to_s %>
	</h1>
	</section>
  </aside><!-- aside span4 -->
  <div class="col-md-8">
  	<% if @user.lessons.any? %>
  	<h3>Lessons (<%= @user.lessons.count %>)</h3>
  	<ol class="lessons">
  	  <%= render @lessons %>
  	</ol>
  	<%= will_paginate @lessons, renderer: BootstrapPagination::Rails %>
  	<% end %>
  </div><!-- div col-md-8 -->
</div><!-- row -->
</div><!-- container -->