<li>
  <%= link_to image_tag(user.avatar_url(:thumb), alt: @user.to_s, class: "avatar", size: "50x50"), user %>
  <%= link_to user.to_s, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
</li>