<% provide(:title, 'All lessons') %>
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div class="container">
<h1>All Lesson near: lat: <%= @result.to_yaml %></h1>
<%= form_tag lessons_path, :method => :get do %>
  <p>
    <%= text_field_tag :location, params[:location], data: {autocomplete_source: lessons_path} %>
    <%= submit_tag "Search Near", :name => nil %>
<% end %>

  <div class="row">
	<aside class="col-md-5">
	  <section>
	  <div style='width: 460px;'>
	    <div id="map" style='width: 460px; height: 460px;'></div>
	  </div><!-- container -->
	  <script type="text/javascript">
	    handler = Gmaps.build('Google');
	    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
	    markers = handler.addMarkers(<%=raw @hash.to_json %>);
	    handler.bounds.extendWith(markers);
	    handler.fitMapToBounds();
	    });
	  </script>
	  </section>
	  <section>
	  <div class="filters">
		<ul>
		  <li>Sort by:</li>
		  <li><%= sortable "title" %></li>
		  <li><%= sortable "price" %></li>
		  <li><%= sortable "created_at", "Posted" %></li>
		</ul>
	  </div>
	  </section>
	  <section>
		<div id="tag_cloud">
		<% tag_cloud Lesson.tag_counts, %w{s m l} do |tag, css_class| %>
		<%= link_to tag.name, tag_path(tag.name), class: css_class %>
		<% end %>
		</div>
	  </section>

	</aside><!-- col-md-5 -->

	<div class="col-md-7">
	  <ul class="lessons">
	    <%= render @lessons %>
	  </ul>
	  <%= will_paginate @lessons, renderer: BootstrapPagination::Rails %>
    </div><!-- col-md-7 -->
  </div><!-- row -->
</div><!-- container -->